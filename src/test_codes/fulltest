ProgramaTest
BEGIN
    ## Declaration of variables 
    SINGLE x, y;
    UINTEGER counter;
    
    ## Example of :=ment 
    x := 3.14;
    y := 2.71;

    ## Output using OUTF 
    OUTF (x);
    
    ## Loop using REPEAT 
    REPEAT BEGIN
        counter := counter + 1;
        x := x + y;
        OUTF (x);
    END UNTIL (counter > 10);
    
    ## Conditional IF 
    IF (x > y) THEN
        OUTF [X is greater than Y];
    ELSE
        OUTF [Y is greater or equal to X];
    END_IF;

    ## Function invocation 
    x := myFunc(5);
    
END;

## Function definition 
SINGLE FUN myFunc (UINTEGER a) BEGIN
    SINGLE result;
    result := a * 2.5;
    RET (result);
END;

